<div class="middle-bar">
</div>

<div class="flex items-center justify-center">
    <div class="inline-flex shadow-md hover:shadow-lg focus:shadow-lg" role="group">
        {{#each allDates}}
        <a value="{{shortDate}}" href="{{../venue._id}}?movieDate={{shortDate}}"
            class="dates selected-date inline-block px-10 py-2.5 bg-black text-white font-medium text-xs leading-tight uppercase hover:bg-gray-600 focus:bg-gray-600 focus:outline-none focus:ring-0 active:bg-blue-800 transition duration-150 ease-in-out focused"><span
                class="text-xl">{{longDate.day}} {{longDate.month}}</span> {{longDate.weekDay}}</a>
        {{/each}}
    </div>
</div>

<div class="flex justify-center pt-10">
    <div class="flex flex-col md:flex-row md:full rounded-lg bg-white shadow-lg w-3/4">
        <div class="p-6 flex flex-col justify-start w-screen">
            <h3
                class="text-4xl font-extrabold tracking-tight  text-gray-900 sm:text-5xl md:text-4xl lg:text-5xl xl:text-6xl">
                {{venue.name}}
            </h3>
            <p class="text-gray-700 text-base mb-4">
            </p>
            <p class="text-gray-600 text-lg"> <b>Amenities:</b> {{venue.ameneties}}</p>
            <p class="text-gray-600 text-lg"> <b>Seating:</b> {{venue.seating}}</p>

            <p class="text-gray-600 text-lg"> {{venue.location}}</p>
            <br>
            <div>
                {{#each times}}
                <a href="/seats/{{../../movie.id}}/{{../venue.id}}?movieTime={{this}}&movieDate={{../../currentDate}}"
                    class="w-36 inline-flex items-center justify-center px-4 py-2 text-base font-medium leading-6 text-white whitespace-no-wrap bg-orange-600 border border-gray-200 rounded-md shadow-sm hover:bg-orange-300 focus:outline-none focus:shadow-none">
                    {{this}}
                </a>
                {{/each}}
            </div>
        </div>
        <img class="h-48 md:h-auto object-cover md:w-96 rounded-t-lg md:rounded-none md:rounded-r-lg"
            src="{{venue.picUrl}}" alt="HTML tutorial" style="width:442px;" />
    </div>
</div>

{{#if movies}}
{{#each movies}}

<div class="flex justify-center w-auto" style="padding: 20px;">
    <div class="demo-wrap flex flex-col md:flex-row md:full rounded-lg bg-white shadow-lg w-11/12">
        <img class="demo-bg2" src="https://image.tmdb.org/t/p/original/{{movie.backdrop}}" alt="">
        <img class="demo-content w-96 md:h-auto object-cover md:w-96 rounded-t-lg md:rounded-none md:rounded-l-lg"
            src="https://image.tmdb.org/t/p/original/{{movie.poster}}" alt="HTML tutorial" style="width:242px;" />
        <div class="p-6 flex flex-col justify-start bg-[url(https://image.tmdb.org/t/p/original/{{movie.backdrop}})]">            
            <h3
                class="text-5xl text-left font-extrabold tracking-tight  text-gray-900 sm:text-5xl md:text-5xl lg:text-5xl xl:text-5xl">
                {{movie.title}}
            </h3>
            <p class="text-gray-700 text-base pt-5 mb-4">
                {{movie.overview}}
            </p>
            <section class="relative py-7 overflow-hidden ">
                <div class="relative ">
                    <div class="grid w-full grid-cols-2 gap-5 sm:grid-cols-3 lg:grid-cols-8">

                        {{#each times}}
                        <div class="flex items-center flex-col justify-center text-sm">

                            <a href="/seats/{{../movie.id}}/{{../../venue.id}}?movieTime={{this.time}}&movieDate={{../../currentDate}}"
                                class="w-36 inline-flex items-center justify-center px-4 py-2 text-base font-medium leading-6 text-white whitespace-no-wrap bg-orange-600 border border-gray-200 rounded-md shadow-sm hover:bg-orange-300 focus:outline-none focus:shadow-none">
                                {{this.time}}
                            </a>
                            <a>{{this.avail}} seats available</a> <br>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<div class="flex text-center justify-center w-auto" style="padding: 20px;">
    <div class="md:full rounded-lg bg-white shadow-lg w-11/12">
        <div class="p-6 ">
            <h3
                class="text-3xl  font-extrabold tracking-tight  text-center text-gray-900 sm:text-3xl md:text-3xl lg:text-3xl xl:text-3xl">
                NO MOVIES AVAILABLE.<br> PICK A DIFFEERNT DATE OR VENUE
            </h3>
        </div>
    </div>
</div>
{{/if}}

<br>

{{#if errorMessage}}
{{errorMessage}}
{{/if}}