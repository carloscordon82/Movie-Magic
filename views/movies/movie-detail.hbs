<div class="middle-bar">

</div>
<div class="flex items-center justify-center">
    <div class="inline-flex shadow-md hover:shadow-lg focus:shadow-lg" role="group">
        {{#each allDates}}
        <a value="{{shortDate}}" href="{{../movie._id}}?movieDate={{shortDate}}"
            class="dates selected-date inline-block px-10 py-2.5 bg-black text-white font-medium text-xs leading-tight uppercase hover:bg-gray-600 focus:bg-gray-600 focus:outline-none focus:ring-0 active:bg-blue-800 transition duration-150 ease-in-out focused"><span
                class="text-xl">{{longDate.day}} {{longDate.month}}</span> {{longDate.weekDay}}</a>
        {{/each}}
    </div>
</div>






<div class="flex justify-center w-auto " style="padding: 50px;">

    {{!-- <div
        style="position: absolute; width:0%; height:200px; background-image:url(https://image.tmdb.org/t/p/original/{{movie.backdrop}})">
        ;lksajdf;lkjasdf;lkjasd;flkjasd;flkjasd;flkjas;dflkjasd;flkjasd;flkjasd;flkjasd;flkjasd;flkjasd;flkjasd;flkjasd;flkjasd;flkjasdf;lkj
    </div> --}}
    <div class="demo-wrap flex flex-col md:flex-row md:full rounded-lg bg-white shadow-lg w-auto"
        style="position: relative;">
        <img class="demo-bg" src="https://image.tmdb.org/t/p/original/{{movie.backdrop}}" alt="">
        {{!-- <div class=""
            style="width:300px; height:200px; background-image:url(https://image.tmdb.org/t/p/original/{{movie.backdrop}})">
        </div> --}}
        <img class="demo-content w-96 h-96 md:h-auto object-cover md:w-96 rounded-t-lg md:rounded-none md:rounded-l-lg"
            src="https://image.tmdb.org/t/p/original/{{movie.poster}}" alt="HTML tutorial" style="width:342px;" />

        <div class="p-6 flex flex-col justify-start ">

            <h3 style="z-index: 9999"
                class="text-4xl mb-1 font-extrabold tracking-tight  text-gray-900 sm:text-5xl md:text-4xl lg:text-5xl xl:text-6xl">
                {{movie.title}}
                <a class="text-3xl text-center pl-1 pr-1 mb-4 inline-block align-middle border-4 border-indigo-400"
                    style="min-width: 40px;">{{movie.cert}}</a>
            </h3>
            <p style="z-index: 9999" class="text-gray-700 text-base mb-4">
                {{movie.overview}}
            </p>
            <p class="text-gray-700 text-lg"><b>Genres:</b> {{movie.genre}}</p>
            <p class="text-gray-700 text-sm"><b>Released:</b> {{movie.releaseDate}}</p>
            <p class="text-gray-700 text-sm mt-2"><b>Cast:</b></p>
            

            <section class="relative pt-2 overflow-hidden ">

                <div class="relative  mx-auto max-w-9xl">

                    <div class="grid w-full grid-cols-2 gap-4 pl-4 pr-4 sm:grid-cols-3 lg:grid-cols-6">


                        {{#each cast}}
                        <div class="flex flex-col items-center justify-start col-span-1">
                            <div class="relative ">

                                <img class="small-pic relative z-20 w-full rounded-lg"
                                    src="https://image.tmdb.org/t/p/original{{profile_path}}">
                            </div>
                            <div class="mt-3 space-y-2 text-center">
                                <div class="space-y-1 text-md font-medium leading-6">
                                    <h3 class="text-xs">{{name}}</h3>
                                    <h3 class="text-sm font-extrabold">{{character}}</h3>
                                </div>

                            </div>
                        </div>
                        {{/each}}



                    </div>
                </div>
            </section>

        </div>

        <div class="p-6 flex flex-col justify-start" style="z-index: 9999;">
            <p class="text-black text-4xl">Trailer</p>
            <br>
            <iframe width="560" height="315" src="{{trailer}}" title="YouTube video player" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
        </div>
    </div>
</div>
</div>



{{#if show}}
{{#each show}}


<div class="flex justify-center pb-10">
    <div class="flex flex-col md:flex-row md:full rounded-lg bg-white shadow-lg w-11/12">
        <div class="p-6 flex flex-col justify-start w-screen">
            <h3
                class="text-5xl font-extrabold tracking-tight  text-gray-900 sm:text-5xl md:text-5xl lg:text-5xl xl:text-5xl">
                {{venue.name}}
            </h3>
            <p class="text-gray-700 text-base mb-4">
            </p>
            <p class="text-gray-600 text-lg"> <b>Amenities:</b> {{venue.ameneties}}</p>
            <p class="text-gray-600 text-lg"> <b>Seating:</b> {{venue.seating}}</p>

            <p class="text-gray-600 text-md"> {{venue.location}}</p>
            <br>
            <div class="grid w-full grid-cols-2 gap-5 sm:grid-cols-3 lg:grid-cols-8">
                {{#each times}}
                <div class="flex items-center flex-col justify-center text-sm">
                    <a href="/seats/{{../../movie.id}}/{{../venue.id}}?movieTime={{this.time}}&movieDate={{../../currentDate}}"
                        class="w-36 inline-flex items-center justify-center px-4 py-2 text-base font-medium leading-6 text-white whitespace-no-wrap bg-orange-600 border border-gray-200 rounded-md shadow-sm hover:bg-orange-300 focus:outline-none focus:shadow-none">
                        {{this.time}}
                    </a>
                    {{this.avail}} seats available
                </div>
                {{/each}}
            </div>


        </div>
        <img class=" w-96 h-48 md:h-auto object-cover md:w-96 rounded-t-lg md:rounded-none md:rounded-r-lg"
            src="{{venue.picUrl}}" alt="HTML tutorial" style="width:242px;" />


    </div>

</div>

{{/each}}
{{else}}
<div class="flex text-center justify-center w-auto" style="padding: 20px;">
    <div class="md:full rounded-lg bg-white shadow-lg w-11/12">



        <div class="p-6 ">

            <h3
                class="text-3xl  font-extrabold tracking-tight  text-center text-gray-900 sm:text-3xl md:text-3xl lg:text-3xl xl:text-3xl">
                NO SHOWTIMES AVAILABLE.<br> PICK A DIFFEERNT DATE OR MOVIE
            </h3>




        </div>



    </div>

</div>
{{/if}}



