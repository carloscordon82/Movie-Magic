<h1>Signup</h1>
<form action="/signup" method="POST">
   <label> Username
      <input type="text" name="username">
   </label>
   <label> First Name
      <input type="text" name="firstName">
   </label>
   <label> Last Name
      <input type="text" name="lastName">
   </label>
   <label> Password
      <input type="password" name="password">
   </label>

   <button type="submit">Submit</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}